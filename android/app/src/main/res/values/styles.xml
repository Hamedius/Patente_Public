<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- تم اصلی برنامه (Material Components 1.x) -->
    <style name="Theme.Patente" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Status/Navi bars -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/black</item>

        <!-- پالت رنگ متریال -->
        <item name="colorPrimary">@color/patente_primary</item>
        <item name="colorPrimaryVariant">@color/patente_primary_dark</item>
        <item name="colorOnPrimary">@android:color/white</item>
    </style>

    <!-- تم اسپلش (اختیاری). فعلاً در مانیفست استفاده‌اش را برداشتیم -->
    <style name="Theme.SplashScreen" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowBackground">@drawable/launch_background</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

</resources>